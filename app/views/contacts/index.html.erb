<div id="results">
<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Email</th>
    <th>Phone</th>
		<th>NGO</th>
		<th>Details</th>
		<th>Edit</th>
		<th>Destroy</th>
  </tr>

<% @contacts.each do |contact| %>
<tr class="<%= cycle('alt', '') %>">
    <td><%= contact.show_name %></td>
    <td><%= contact.show_title %></td>
    <td><%= contact.show_email %></td>
    <td><%= contact.show_phone %></td>
		<td><%= contact.show_ngos %></td>
    <td><%= link_to 'Details', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<div id="page-links">
<%= link_to '+ Add New contact', new_contact_path %>
</div>

</div>