<div id="newForm">
	
	<h1>Editing district</h1>

	<% form_for(@district) do |f| %>
	<fieldset class="inlineLabels">
	  <%= f.error_messages %>

	  <div class="ctrlHolder">
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	  </div>
	  <div class="ctrlHolder">
	    <%= f.label :country_id %>
	    <%= f.collection_select :country_id, Country.all, :id, :name %>
	  </div>
	  <div class="ctrlHolder">
	    <%= f.label :latlong %>
	    <%= f.text_field :latlong %>
	  </div>
	  <div class="ctrlHolder">
	    <%= f.label :iso_code, "ISO 3166-2" %>
	    <%= f.text_field :iso_code %>
	  </div>	
	  <div class="buttonHolder">
	    <%= f.submit 'Update' %>
	  </div>
	</fieldset>
	<% end %>

	<%= link_to 'Show', @district %> |
	<%= link_to 'Back', districts_path %>
	
</div>