<div id="titleHeader">
	<h1 class="floatLeftWhite">The Mashera Project: Districts</h1>
</div>

<table>
  <tr>
    <th>Name</th>
		<th>Province</th>
    <th>Country</th>
		<th>Geo Data</th>
		<th>Details</th>
		<th>Edit</th>
		<th>Destroy</th>
  </tr>

<% @districts.each do |district| %>
  <tr>
    <td><%= district.name %></td>
		<td><%= district.show_province %></td>
    <td><%= district.country.name %></td>
		<td><%= district.latlong %></td>
    <td><%= link_to 'Details', district %></td>
    <td><%= link_to 'Edit', edit_district_path(district) %></td>
    <td><%= link_to 'Destroy', district, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New district', new_district_path %>