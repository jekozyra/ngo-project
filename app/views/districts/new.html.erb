<div id="newForm">
	
	<h1>New district</h1>

	<% form_for(@district) do |f| %>
	<fieldset class="inlineLabels">
	  <%= f.error_messages %>
	
		<%= render :partial => 'fields', :locals => {:f => f, :provinces => @provinces, :district_province => @district.province_id} %>

	  <div class="buttonHolder">
	    <%= f.submit 'Add' %>
	  </div>
	</fieldset>
	<% end %>

	<%= link_to 'Back', districts_path %>
	
</div>