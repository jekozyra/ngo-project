<div id="detailsPage">

	<h1>NGO Details</h1>

	<fieldset class="inlineLabels">

		<div class="ctrlHolder">
		  <label>Acronym:</label>
		  <%= @ngo.acronym %>
		</div>

		<div class="ctrlHolder">
		  <label>Name:</label>
		  <%= @ngo.name %>
		</div>

		<div class="ctrlHolder">
		  <label>Country:</label>
		  <%= @ngo.country_name %>
		</div>

		<div class="ctrlHolder">
		  <label>District:</label>
		  <%= @ngo.district_name %>
		</div>

		<div class="ctrlHolder">
		  <label>Sector:</label>
		  <%= @ngo.sector_names %>
		</div>

		<div class="ctrlHolder">
		  <label>Affiliation:</label>
		  <%= @ngo.affiliation_names %>
		</div>

		<div class="ctrlHolder">
		  <label>Contact name:</label>
			<% unless @ngo.contact_name.nil? or @ngo.contact_name == "" %>
				<%= @ngo.contact_name %>
			<% else %>
				---
			<% end %>
		</div>

		<div class="ctrlHolder">
		  <label>Contact position:</label>
			<% unless @ngo.contact_position.nil? or @ngo.contact_position == "" %>
				<%= @ngo.contact_position %>
			<% else %>
				---
			<% end %>
		</div>

		<div class="ctrlHolder">
		  <label>Contact address:</label>
		  <%= @ngo.contact_address %>
		</div>

		<div class="ctrlHolder">
		  <label>Contact phone:</label>
		  <%= @ngo.contact_phone %>
		</div>

		<div class="ctrlHolder">
		  <label>Contact email:</label>
		  <%= @ngo.contact_email %>
		</div>
			
	</fieldset>
			
</div>

