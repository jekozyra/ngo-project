<div id="searchForm">
	<% form_tag ({:controller => "search", :action => "search"}, :id => "search_form") do %>
		<h2>Search The Mashera Project</h2>
		<fieldset class="inlineLabels">
			<div class="ctrlHolder" ><%= label_tag 'ngo_name', 'NGO Name/Acronym'%><%= text_field_tag 'ngo_name', nil, :size => 45 %></div>
			<div class="ctrlHolder"><%= label_tag 'countries', 'Country(s)' %><%= select_tag 'countries', options_from_collection_for_select(@countries, :id, :name), {:size => 5, :multiple => true} %></div>
			<span id="provinces_districts" ><%= render :partial => "list_provinces_districts", :locals => {:provinces => @provinces, :districts => @districts, :selected_provinces => nil, :selected_districts => nil} %></span>
			<div class="ctrlHolder"><%= label_tag 'sector_name', 'Sector' %><%= collection_select :sector, :name, @sectors, :id, :name, {}, :size => 7, :multiple => true %></div>
			<div class="ctrlHolder"><%= label_tag 'affiliation_name', 'Affiliation(s)' %><%= collection_select :affiliation, :name, @affiliations, :id, :name, {}, :size => 5, :multiple => true %></div>
			<div class="ctrlHolder"><%= label_tag 'display_option', 'Display Options' %>
				<%= radio_button_tag 'display_option', 'table', true %>&nbsp;Table&nbsp;&nbsp;
				<%= radio_button_tag 'display_option', 'location_map', false %>&nbsp;Location Map&nbsp;&nbsp;
			</div>
			<div class="buttonHolder"><input type="reset" value="Reset" /><%= submit_tag 'Search' %></div>
		</fieldset>
	<% end %>
</div>