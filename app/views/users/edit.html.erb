<div id="mashera-form">

	<% form_for(@user) do |f| %>
	  <%= f.error_messages %>
	
		<fieldset class="inlineLabels">

			<ol>
				<%= render :partial => "fields", :locals => {:f => f} %>
		
				<li>
			    <%= f.label :user_type %>
					<%= f.select :user_type, ["user", "admin"], {:selected => @user.user_type} %>
			  </li>
	
				<li>
				  <%= f.label :approved, "Approved?" %>
				  <%= f.check_box :approved %>
				</li>

			  <div class="buttonHolder">
			    <%= f.submit 'Update' %>
			  </div>
			</ol>
	
		</fieldset>
	<% end %>
	
	
	<div id="page-links">
	<%= link_to 'Show', @user %> |
	<%= link_to 'Back', users_path %>
	</div>

</div>